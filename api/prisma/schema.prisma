generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TicketStatus {
  OPEN
  PROCESSING
  CLOSED
}

enum ServiceStatus {
  ACTIVE
  INACTIVE
}

enum Role {
  ADMIN
  CLIENT
  TECHNICIAN
}

model Admin {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String

  role Role

  @@map("admins")
}

model Client {
  id           String  @id @default(uuid())
  profilePhoto String?
  email        String  @unique
  password     String
  name         String
  role         Role

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tickets Ticket[]

  @@map("clients")
}

model Technician {
  id           String  @id @default(uuid())
  profilePhoto String?
  email        String  @unique
  password     String
  name         String
  role         Role

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tickets      Ticket[]
  availability Availability[]

  @@map("technicians")
}

model Availability {
  id           String   @id @default(uuid())
  technicianId String
  time         DateTime

  technician Technician @relation(fields: [technicianId], references: [id])

  @@unique([technicianId, time]) // garante que um técnico não tenha horários duplicados
  @@map("availabilities")
}

model Ticket {
  id           String  @id @default(uuid())
  title        String
  description  String
  clientId     String
  technicianId String
  initialCost  Decimal @default(200.00)

  services Service[] @relation("TicketServices", map: "ticket_services")

  status     TicketStatus @default(OPEN)
  client     Client       @relation(fields: [clientId], references: [id], onDelete: Cascade)
  technician Technician   @relation(fields: [technicianId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("tickets")
}

model Service {
  id     String        @id @default(uuid())
  title  String
  value  Decimal
  status ServiceStatus @default(ACTIVE)

  tickets Ticket[] @relation("TicketServices", map: "ticket_services")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("services")
}
